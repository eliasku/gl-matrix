{
  "name": "@eliasku/gl-matrix",
  "description": "gl-matrix typescript port (buildless)",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasku/gl-matrix.git"
  },
  "author": "Ilya Kuzmichev",
  "scripts": {
    "test": "bun test",
    "format": "prettier --write **/*.{ts,json,md}",
    "check": "tsc -p .",
    "lint": "eslint .",
    "build": "tsup ./src/index.ts --target esnext --format esm --minify terser --dts --sourcemap",
    "doc": "typedoc --out doc"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "optionalDependencies": {
    "prettier": "latest",
    "eslint": "latest",
    "typescript-eslint": "latest",
    "typescript": "latest",
    "tsdown": "latest",
    "tsup": "latest",
    "terser": "latest",
    "typedoc": "latest"
  },
  "exports": {
    ".": "./src/index.ts"
  }
}
