{
  "name": "@eliasku/gl-matrix",
  "description": "gl-matrix typescript port (buildless)",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasku/gl-matrix.git"
  },
  "author": "Ilya Kuzmichev",
  "keywords": [
    "glm",
    "gl-matrix",
    "webgl",
    "math",
    "gl"
  ],
  "scripts": {
    "test": "bun test",
    "format": "prettier --write **/*.{ts,json,md}",
    "check": "tsc -p .",
    "lint": "eslint .",
    "build": "tsup ./src/index.ts --target esnext --platform neutral --format esm --dts --sourcemap --minify terser --treeshake smallest --splitting false",
    "doc": "typedoc --out doc"
  },
  "devDependencies": {
    "@types/bun": "1.3.9"
  },
  "optionalDependencies": {
    "prettier": "latest",
    "eslint": "10.0.0",
    "typescript-eslint": "8.56.0",
    "typescript": "latest",
    "tsdown": "0.20.3",
    "tsup": "latest",
    "terser": "latest",
    "typedoc": "0.28.17"
  },
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/eliasku/gl-matrix/issues"
  }
}
