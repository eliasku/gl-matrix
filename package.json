{
  "name": "@eliasku/gl-matrix",
  "description": "gl-matrix typescript port (buildless)",
  "type": "module",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasku/gl-matrix.git"
  },
  "author": "Ilya Kuzmichev",
  "keywords": ["glm", "gl-matrix", "webgl", "math", "gl"],
  "scripts": {
    "typecheck": "tsc -p .",
    "check:fix": "biome check --write",
    "check:ci": "biome ci",
    "build": "tsup ./src/index.ts --target esnext --platform neutral --format esm --dts --sourcemap --minify terser --treeshake smallest --splitting false",
    "doc": "typedoc --out doc"
  },
  "devDependencies": {
    "@types/bun": "1.3.9",
    "@biomejs/biome": "^2.4.4",
    "typescript": "latest",
    "tsup": "latest",
    "terser": "latest",
    "typedoc": "0.28.17"
  },
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts"
  },
  "files": ["src"],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/eliasku/gl-matrix/issues"
  }
}
