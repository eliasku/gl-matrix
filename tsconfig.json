{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "rootDir": ".",
    "types": ["bun-types"],
    "noEmit": true,
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "strict": true
  },
  "include": ["./src/**/*.ts", "./spec/**/*.ts"]
}
